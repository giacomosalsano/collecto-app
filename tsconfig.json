{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "models/**/*",
    "migrations/**/*",
    "config/**/*",
    "*.js"
  ],
  "exclude": ["dist", "node_modules"]
}
